    }

    .product-listing {
        display: flex;
        flex-wrap: wrap;
        padding: 20px;
        justify-content: space-around;
    }

    .product-card {
        background-color: #fff;
        padding: 10px;
        width: 200px;
        margin: 15px;
        text-align: center;
        border: 1px solid #ddd;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
    }

        .product-card img {
            width: 100%;
            height: auto;
        }

    button {
        background-color: #28a745;
        color: white;
        padding: 8px 12px;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background-color: #218838;
        }

</style>



