    <script>
        // Hàm lưu địa chỉ vào localStorage và hiển thị ra màn hình
        function saveAddress() {
            var address = document.getElementById('addressInput').value;
            if (address) {
                localStorage.setItem('savedAddress', address); // Lưu địa chỉ vào localStorage
                document.getElementById('displayAddress').innerText =  address; // Hiển thị địa chỉ
            }
        }

        // Khi tải lại trang, hiển thị địa chỉ đã lưu (nếu có)
        window.onload = function () {
            var savedAddress = localStorage.getItem('savedAddress');
            if (savedAddress) {
                document.getElementById('displayAddress').innerText = 'Địa chỉ đã lưu: ' + savedAddress;
            }
        };

        let currentSlide = 0;

        function showSlide(index) {
            const slides = document.querySelectorAll('.slide');
            const totalSlides = slides.length;

            if (index >= totalSlides) {
                currentSlide = 0; // Quay lại slide đầu tiên
            } else if (index < 0) {
                currentSlide = totalSlides - 1; // Quay lại slide cuối cùng
            } else {
                currentSlide = index;
            }

            const sliderContainer = document.querySelector('.slider-container');
            sliderContainer.style.transform = `translateX(-${currentSlide * 100}%)`;
        }

        function nextSlide() {
            showSlide(currentSlide + 1); // Chuyển đến slide tiếp theo
        }

        function prevSlide() {
            showSlide(currentSlide - 1); // Quay lại slide trước đó
        }

        // Hiển thị slide đầu tiên khi tải trang
        showSlide(currentSlide);

    </script>

</head>

